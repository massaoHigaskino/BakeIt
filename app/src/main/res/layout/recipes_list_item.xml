<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_recipe"
    style="@style/recipes_card_view">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardviewTextBg">
        <ImageView
            android:contentDescription="@string/recipe_illustration"
            android:id="@+id/iv_recipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_height" />
        <TextView
            android:id="@+id/tv_recipe_name"
            style="@style/cardview_heading_text_view"
            android:layout_gravity="bottom"/>
    </FrameLayout>
</android.support.v7.widget.CardView>