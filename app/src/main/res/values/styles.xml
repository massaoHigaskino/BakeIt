<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="with_margins_half">
        <item name="android:layout_marginTop">@dimen/half_vertical_padding</item>
        <item name="android:layout_marginBottom">@dimen/half_vertical_padding</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_padding</item>
    </style>

    <style name="with_margins">
        <item name="android:layout_marginTop">@dimen/vertical_padding</item>
        <!--item name="android:layout_marginBottom">@dimen/vertical_padding</item-->
        <item name="android:layout_marginLeft">@dimen/horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_padding</item>
    </style>

    <style name="with_all_margins" parent="with_margins">
        <item name="android:layout_marginBottom">@dimen/vertical_padding</item>
    </style>

    <style name="with_padding_half">
        <item name="android:paddingTop">@dimen/half_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/half_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingStart">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/horizontal_padding</item>
    </style>

    <style name="with_padding">
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <!--item name="android:paddingBottom">@dimen/vertical_padding</item-->
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingStart">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/horizontal_padding</item>
    </style>

    <style name="with_all_padding" parent="with_padding">
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
    </style>

    <style name="general_card_view" parent="with_margins">
        <!--These properties allow card view ripple effect-->
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="recipes_card_view" parent="general_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="general_text_view" parent="with_all_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="value_text_view" parent="general_text_view">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="label_text_view" parent="general_text_view">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="error_text_view" parent="value_text_view">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="cardview_text_view" parent="value_text_view">
        <item name="android:colorBackground">@color/cardviewTextBg</item>
    </style>

</resources>
